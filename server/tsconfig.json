{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "typeRoots": [ "./src/typings", "./node_modules/@types"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
        "@root/*": ["src/*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}
